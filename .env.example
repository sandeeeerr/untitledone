# Supabase Configuration
SUPABASE_URL=https://your-project.supabase.co
SUPABASE_ANON_KEY=your-anon-key-here
SUPABASE_SERVICE_ROLE_KEY=your-service-role-key-here
SUPABASE_DB_URL=postgresql://postgres:[YOUR-PASSWORD]@db.your-project.supabase.co:5432/postgres

# Email Configuration (Resend)
RESEND_API_KEY=your-resend-api-key-here
MAIL_FROM=noreply@yourdomain.com

# Storage Limits
MAX_USER_STORAGE_MB=500
MAX_UPLOAD_FILE_MB=200

# Site Configuration
NEXT_PUBLIC_SITE_URL=http://localhost:3000

# External Storage - Dropbox OAuth
# Register your app at: https://www.dropbox.com/developers/apps
DROPBOX_APP_KEY=your-dropbox-app-key-here
DROPBOX_APP_SECRET=your-dropbox-app-secret-here
DROPBOX_REDIRECT_URI=http://localhost:3000/api/storage/callback/dropbox

# External Storage - Google Drive OAuth
# Register your app at: https://console.cloud.google.com/apis/credentials
GOOGLE_DRIVE_CLIENT_ID=your-google-client-id-here.apps.googleusercontent.com
GOOGLE_DRIVE_CLIENT_SECRET=your-google-client-secret-here
GOOGLE_DRIVE_REDIRECT_URI=http://localhost:3000/api/storage/callback/google_drive

# Token Encryption
# Generate a secure 64-character hex string with: openssl rand -hex 32
STORAGE_TOKEN_ENCRYPTION_KEY_V1=your-64-char-hex-string-here
STORAGE_TOKEN_ENCRYPTION_CURRENT_VERSION=v1

# Note: For key rotation, add STORAGE_TOKEN_ENCRYPTION_KEY_V2 and update STORAGE_TOKEN_ENCRYPTION_CURRENT_VERSION to v2